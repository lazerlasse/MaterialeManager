@model MaterialeManager.Models.Case

@{
    ViewData["Title"] = "Rediger sag";
}

<h2>Rediger sag</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CaseID" />
            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <input type="datetime" asp-for="Created" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="CaseState" class="control-label"></label>
                <input asp-for="CaseState" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="CaseOperatorID" class="control-label"></label>
                <input asp-for="CaseOperator.UserName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="PhotographerID" class="control-label"></label>
                <input asp-for="Photographer.UserName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input type="submit" value="Gem ændringer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Fortryd</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
